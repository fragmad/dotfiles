work: work-monitors set-us-layout set-no-caps

set-us-layout: 
	setxkbmap en_US

set-uk-layout: 
	setxkbmap gb 

suspend-laptop:
	sudo -v;gnome-screensaver-command --lock;sleep 3;sudo pm-suspend

hibernate-laptop:
	sudo -v;gnome-screensaver-command --lock;sleep 3;sudo pm-hibernate

work-monitors:
	./.screenlayout/default_layout.sh

set-no-caps:
	setxkbmap -option ctrl:nocaps

write-ten:
	date; sleep 10m; notify-send -u critical "STOP WRITING"

show-inputs:
	xinput list

show-disable-commands: 
	echo "xinput --disable 12";
